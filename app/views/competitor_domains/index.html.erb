<div class="container competitor-domains-container">
  <h1>Total competitor revenue by TLD</h1>

  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th>TLD</th>
        <th>Total Revenue</th>
      </tr>
    </thead>
    <tbody>
      <% @revenue_by_tld.each do |tld, revenue| %>
        <tr>
          <th><%= tld %></th>
          <th><%= revenue %></th>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h1>Last 50 sold domains</h1>

  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Source</th>
        <th>Sold Date</th>
      </tr>
    </thead>
    <tbody>
      <% @last_30_domains_sold.each do |domain| %>
        <tr>
          <th><%= domain.name_with_tld %></th>
          <th><%= domain.price %></th>
          <th><%= domain.source %></th>
          <th><%= domain.pretty_date(domain.sold_date) %></th>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
