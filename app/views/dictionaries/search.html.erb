<div class="container">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Word</th>
        <th>First Character</th>
      </tr>
    </thead>
    <tbody>
      <% @words.each do |word| %>
        <tr>
          <th><a href="<%= word.definition_url %>" target="_blank"><%= word.word %></a></th>
          <th><%= word.first_character %></th>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
