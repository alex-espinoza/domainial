<!DOCTYPE html>
<html>
  <head>
    <title>Domainial</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <nav class="navbar navbar-dark bg-inverse">
        <a class="navbar-brand" href="#">Domainial</a>
        <ul class="nav navbar-nav">
          <li class="nav-item">
            <%= link_to 'Wanted', root_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'New', new_wanted_domain_path, class: 'nav-link' %>
          </li>
        </ul>
      </nav>

      <% if flash[:notice] %>
        <div class="alert alert-info" role="alert">
          <%= flash[:notice] %>
        </div>
      <% end%>

      <% if flash[:error] %>
        <div class="alert alert-danger" role="alert">
          <%= flash[:error] %>
        </div>
      <% end%>

      <% if flash[:success] %>
        <div class="alert alert-success" role="alert">
          <%= flash[:success] %>
        </div>
      <% end%>
    </div>

    <%= yield %>
  </body>
</html>
